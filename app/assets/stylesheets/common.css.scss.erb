#flash_notice, #flash_alert {
  padding: 5px 8px;
  margin: 10px auto;
  width: 940px;
}
#flash_notice {
  background-color: #CFC;
  border: solid 1px #6C6;
}
#flash_alert {
  background-color: #FCC;
  border: solid 1px #C66;
}

body {
  background:#f8f8f8 url(<%=image_path("bg.png")%>) repeat 0 0;
}



#top {
  border-top: solid 4px #F00;
  height: 30px;
  line-height: 30px;
  background-color: #EBEBEB;
  overflow: hidden;
}
#top .c {
  margin: 0 auto;
  width: 940px;
  overflow: hidden;
}
#top .c .lt {
  float: left;
  width: 700px;
}
#top .c .rt {
  float: right;
  text-align: right;
  width: 250px;
}

#logo_search{
  margin: 20px auto;
  width: 960px;
  height: 50px;
  overflow: hidden;
}
#logo_search a.logo{
  float: left; 
  display: block;
  width: 150px;
  height: 50px;
  overflow: hidden;
}
#logo_search a.logo img{
  border: none;
}
#logo_search .search {
  width: 500px;
  float: left;
  margin: 8px 0 0 20px;
}
#logo_search .search form {
  margin: 0;
  padding: 0;
  display: inline;
}
#logo_search .search .text_border {
  display: block;
  float: left;
  width: 300px;
  height: 30px;
  border: solid 1px #d9d9d9;
  border-top-color: #c0c0c0;
  background-color: #fff;
  overflow: hidden;
}
#logo_search .search .text_border .q {
  border: solid 1px #fff;
  width: 278px;
  height: 14px;
  padding: 7px 10px;
  margin: 0;
}
html * #logo_search .search .text_border .q {
  height: 14px;
}
#logo_search .search a.btn {
  display: block;
  float: left;
  margin-left: 10px;
  padding: 0 10px;
  border: solid 1px #999;
  background-color: #ebebeb;
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 14px;
  color: #000;
  text-decoration: none;
}
#logo_search .search a.btn:hover {
  border-color: #666;
  background-color: #666;
  color: #fff;
}
#logo_search .search a.btn_submit {
  border: solid 1px #3079ed;
  border-top-color: #3079ed;
  background-color: #4a8bf5;
  color: #fff;
}
#logo_search .search a.btn_submit:hover {
  border-color: #3079ed;
  background-color: #3079ed;
}


#nav{
}
#nav ul{
  margin: 0;
  padding: 0;
  list-style: none;
}
#nav ul li{
  margin: 0 20px 0 0;
  padding: 0;
  list-style: none;
  float:left;
}
#nav ul li a{
  line-height: 30px;
  font-size: 14px;
  color: #000;
  font-weight: bold;
  text-decoration: none;
}
#nav ul li a:hover{
  color: #ebebeb;
}

#site_nav {
  height: 30px;
  line-height: 30px;
  overflow: hidden;
}

#main{
  margin: 0 auto;
  width: 960px;
  overflow: hidden; 
}

#main_wrapper {
  float: left;
  width: 100%;
  overflow: hidden;
}

#main_left {
  float: left;
  width: 730px;
  height: 1000px;
}

#main_right {
  float: right;
  width: 220px;
  height: 800px;
}

#footer{
  margin-top: 10px;
  border-top: solid 1px #ccc;
  line-height: 40px;
  font-size: 12px;
  color: #999;
  text-align: center;
}





.clear_both{clear:both;}



/** m theme **/

input.m_btn {
  padding-left: 1em;
  padding-right: 1em;
  line-height: 2em;
  border: outset 1px #999;
  background-color: #ebebeb;
  font-size: 14px;
  font-weight: bold;
  color: #000;
}
input.m_btn:hover {
  border-color: #666;
  background-color: #666;
  color: #fff;
}

/** end of m theme **/
