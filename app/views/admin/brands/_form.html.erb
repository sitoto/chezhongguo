<%= form_for([:admin, @brand], :html => {:multipart => true } ) do |f| %>
  <% if @brand.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@brand.errors.count, "error") %> prohibited this admin_brand from being saved:</h2>

      <ul>
        <% @brand.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">

    <%= f.label :logo_image, "local" %><br />

    <%= f.file_field :logo_image %>

    <%= f.label :remote_logo_image_url, "or remote" %>

    <%= f.text_field :remote_logo_image_url , :value =>  @brand.temp_logo_url %>

  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :name_en %><br />
    <%= f.text_field :name_en %>
  </div>
  <div class="field">
    <%= f.label :name_pinyin %><br />
    <%= f.text_field :name_pinyin %>
  </div>
  <div class="field">
    <%= f.label :display_index %><br />
    <%= f.text_field :display_index %>
  </div>
  <div class="field">
    <%= f.label :hot_index %><br />
    <%= f.text_field :hot_index %>
  </div>


  <div class="field">
    <%= f.label :class_tag %><br />
    <%= f.text_field :class_tag %>
  </div>

  <div class="field">
    <%= f.label :brand_summary %><br />
    <%= f.text_area :brand_summary, :rows => 3, :cols => 40 %>
  </div>
  <div class="field">
    <%= f.label :logo_summary %><br />
    <%= f.text_area :logo_summary, :rows => 3, :cols => 40 %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
