<h1>Listing admin_nodes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Summary</th>
    <th>Sort</th>
    <th>Questions count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @admin_nodes.each do |node| %>
  <tr>
    <td><%= node.name %></td>
    <td><%= node.summary %></td>
    <td><%= node.sort %></td>
    <td><%= node.questions_count %></td>
    <td><%= link_to 'Show', [:admin, node] %></td>
    <td><%= link_to 'Edit', edit_admin_node_path(node) %></td>
    <td><%= link_to 'Destroy', [:admin, node], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

