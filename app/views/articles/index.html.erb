<table class="table" > 
  <thead>
    <tr>
      <th><%= t('title') %></th>
      <th><%= t('tags') %></th>
      <th><%= t('class_name') %></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article %></td>
        <td><%= article.tags.join(',') %></td>
        <td><%= article.class_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

