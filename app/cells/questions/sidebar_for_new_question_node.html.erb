<% if !@node.blank? %>
  <div class="box" style="text-align:center;">
    <h2><%= link_to(@node.name,  node_questions_path(@node))%></h2>

    <%=  render_node_summary(@node) if ["new"].index(params[:action]) %>

    <div class="content">
      <%= link_to(t("questions.start_a_new_question_button"), new_question_path(:node => @node.id), :class => "btn btn-success") %>
    </div>

  </div>
<% end %>
